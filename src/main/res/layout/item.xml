<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/liAlbumArt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/albumicon" />

    <TextView
        android:id="@+id/liTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:ems="13"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Isabella's Theme"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/liAlbumArt"
        app:layout_constraintTop_toTopOf="@+id/liAlbumArt" />

    <TextView
        android:id="@+id/liArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="17"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Alex Judd"
        app:layout_constraintBottom_toBottomOf="@+id/liAlbumArt"
        app:layout_constraintStart_toStartOf="@+id/liTitle" />

    <TextView
        android:id="@+id/liDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:02"
        app:layout_constraintBottom_toBottomOf="@+id/liArtist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/liArtist" />

</androidx.constraintlayout.widget.ConstraintLayout>